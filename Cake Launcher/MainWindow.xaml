<mah:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cake_Launcher"
        xmlns:Custom="http://metro.mahapps.com/winfx/xaml/iconpacks" x:Class="Cake_Launcher.MainWindow"
        mc:Ignorable="d"
        Title="Cake Launcher" Height="450" Width="800" NonActiveGlowBrush="Red" GlowBrush="#CC0078D7" TitleCharacterCasing="Normal" ResizeMode="NoResize" Icon="/Cake Launcher.ico" IsMinButtonEnabled="True" IsMaxRestoreButtonEnabled="False">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://shenzilong.cn/util/redirect_to_bing_daily_picture_address"/>
        </Grid.Background>

        <mah:Tile HorizontalAlignment="Left" Height="147" Margin="40,70,0,0" VerticalAlignment="Top" Width="148" FontFamily="Segoe UI" Title="资讯中心" BorderBrush="#FF848484" mah:ControlsHelper.MouseOverBorderBrush="#FFE2E2E2" mah:ControlsHelper.FocusBorderThickness="10,10,10,10">
            <Grid Width="147" Height="294">
                <Grid x:Name="grid" RenderTransformOrigin="0.5,0.5">
                    <TextBlock Margin="10,10,10,241" TextWrapping="Wrap" Text="启动器仍处于早期开发与测试阶段" FontSize="14"/>
                    <TextBlock Margin="0,58,0,200" TextWrapping="Wrap" Text="感谢大家一直以来对 CakeMC 的支持" HorizontalAlignment="Center" Width="127" FontSize="14"/>
                    <TextBlock Margin="0,163,0,80" TextWrapping="Wrap" Text="本启动器大部分功能仍在开发，敬请期待" HorizontalAlignment="Center" Width="127" FontSize="14"/>
                </Grid>
            </Grid>
        </mah:Tile>
        <mah:Tile Click="TileClick_OpenHelp" HorizontalAlignment="Left" Height="73" VerticalAlignment="Top" Width="148" FontFamily="Segoe UI" Margin="40,222,0,0" Title="帮助" BorderBrush="#FF848484" mah:ControlsHelper.MouseOverBorderBrush="#FFE2E2E2" mah:ControlsHelper.FocusBorderThickness="10,10,10,10">
            <Custom:PackIconModern Height="30" Width="30" Kind="BookPerspectiveHelp"/>
        </mah:Tile>
        <mah:Tile HorizontalAlignment="Left" Height="73" VerticalAlignment="Top" Width="73" FontFamily="Segoe UI" Margin="40,300,0,0" Title="设置" BorderBrush="#FF848484" Background="#CC0078D7" AutomationProperties.Name="Settings" mah:ControlsHelper.MouseOverBorderBrush="#FFE2E2E2" mah:ControlsHelper.FocusBorderThickness="10,10,10,10">
            <Custom:PackIconModern Width="43" Kind="Settings" Height="30" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" >
                <Custom:PackIconModern.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Custom:PackIconModern.RenderTransform>
            </Custom:PackIconModern>
        </mah:Tile>
        <TextBlock HorizontalAlignment="Left" Margin="40,10,0,0" TextWrapping="Wrap" Text="开始" VerticalAlignment="Top" Height="55" Width="73" Foreground="White" FontSize="36" FontFamily="Segoe UI"/>
        <mah:Tile HorizontalAlignment="Left" Height="33" VerticalAlignment="Top" Width="33" FontFamily="Segoe UI" Margin="118,300,0,0" BorderBrush="#FF848484" FontSize="12" ToolTip="切换版本" AutomationProperties.HelpText="切换版本" mah:ControlsHelper.MouseOverBorderBrush="#FFE2E2E2" mah:ControlsHelper.FocusBorderThickness="10,10,10,10">
            <Custom:PackIconFontAwesome Height="21" Width="21" Kind="ExchangeAltSolid" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </mah:Tile>
        <mah:Tile Click="ButtonClick_StartGame" HorizontalAlignment="Left" Height="33" VerticalAlignment="Top" Width="33" FontFamily="Segoe UI" Margin="155,300,0,0" BorderBrush="#FF848484" FontSize="12" ToolTip="启动游戏" AutomationProperties.HelpText="启动游戏" Background="#CC0078D7" mah:ControlsHelper.MouseOverBorderBrush="#FFE2E2E2" mah:ControlsHelper.FocusBorderThickness="10,10,10,10">
            <Custom:PackIconFontAwesome Height="21" Width="21" Kind="BurnSolid"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </mah:Tile>
        <ComboBox HorizontalAlignment="Left" Height="32" Margin="192,106,0,0" VerticalAlignment="Top" Width="201" DisplayMemberPath="Id" Background="#CC0078D7" x:Name="versionCombo" Foreground="White"/>
        <ComboBox x:Name="JavaPathCombo" HorizontalAlignment="Left" Height="32" Margin="192,69,0,0" VerticalAlignment="Top" Width="201" Background="#CC0078D7" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Segoe UI" FontSize="16"/>
        <TextBox x:Name="MemoryTextBox" Text="1024" HorizontalAlignment="Left" Height="32" Margin="192,143,0,0" VerticalAlignment="Top" Width="201" Background="#CC0078D7" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Segoe UI" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Height="23" Margin="400,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="72" Foreground="White" FontSize="16"><Run Language="zh-cn" Text="Java 路径"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Height="23" Margin="400,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="72" Foreground="White" FontSize="16"><Run Language="zh-cn" Text="选择版本"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Height="23" Margin="400,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="121" Foreground="White" FontSize="16"><Run Language="zh-cn" Text="最大内存（MB）"/></TextBlock>
        <ContentControl x:Name="LoginContent" HorizontalAlignment="Left" Height="414" VerticalAlignment="Center" Width="271" Margin="519,0,0,0"/>
        <mah:Tile Click="TileClick_Microsoft" HorizontalAlignment="Left" Height="35" Margin="118,338,0,0" VerticalAlignment="Top" Width="33" ToolTip="微软正版" mah:ControlsHelper.MouseOverBorderBrush="#FFE2E2E2" mah:ControlsHelper.FocusBorderThickness="10,10,10,10">
            <Custom:PackIconModern Width="20" Height="20" Kind="SocialMicrosoft" VerticalAlignment="Center"/>
        </mah:Tile>
        <mah:Tile Click="TileClick_Offline" HorizontalAlignment="Left" Height="35" Margin="155,338,0,0" VerticalAlignment="Top" Width="33" ToolTip="离线登录" mah:ControlsHelper.MouseOverBorderBrush="#FFE2E2E2" mah:ControlsHelper.FocusBorderThickness="10,10,10,10">
            <Custom:PackIconMaterialDesign Width="20" Height="20" Kind="AccountCircle" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </mah:Tile>
        <mah:Tile Click="TileClick_Mojang" HorizontalAlignment="Left" Height="73" Margin="192,300,0,0" VerticalAlignment="Top" Width="147" Title="Mojang 正版" mah:ControlsHelper.MouseOverBorderBrush="#FFE2E2E2" mah:ControlsHelper.FocusBorderThickness="10,10,10,10">
            <Image Height="37" Width="37" HorizontalAlignment="Center" VerticalAlignment="Top" Source="https://pic.liesio.com/2021/08/27/0121e843fcca1.png" />
        </mah:Tile>
    </Grid>
</mah:MetroWindow>
